{
	"name": "tyvn",
	"version": "1.8.0",
	"description": "A collection of typed functions for TypeScript.",
	"main": "./dist/index.js",
	"scripts": {
		"test": "ts-node-dev --respawn --transpile-only --poll ./src/test.spec.ts",
		"lint": "prettier --write .",
		"build": "del-cli ./dist && tsc --diagnostics",
		"prepublish": "yarn lint && yarn build",
		"docs": "yarn typedoc --plugin typedoc-plugin-extras --noFavicon --exclude ./src/functions/Type.ts --exclude ./src/index.ts --exclude './src/test.spec.ts'"
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@commitlint/cli": "^12.1.1",
		"@commitlint/config-angular": "^12.1.1",
		"@types/node": "^17.0.19",
		"@types/prettier": "^2.2.0",
		"del-cli": "^3.0.1",
		"husky": "^6.0.0",
		"lint-staged": "^10.5.4",
		"onigasm": "^2.2.5",
		"prettier": "^2.2.1",
		"ts-node": "^9.1.1",
		"ts-node-dev": "^1.1.1",
		"typedoc": "^0.20.23",
		"typedoc-plugin-extras": "^1.1.7",
		"typescript": "^4.1.3"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"lint-staged": {
		"*.ts": "prettier --write",
		"*.js": "prettier --write"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-angular"
		],
		"rules": {
			"scope-case": [
				2,
				"always",
				"pascal-case"
			],
			"type-enum": [
				2,
				"always",
				[
					"chore",
					"build",
					"ci",
					"docs",
					"feat",
					"fix",
					"perf",
					"refactor",
					"revert",
					"style",
					"test"
				]
			]
		}
	},
	"files": [
		"src/**/**/*",
		"dist/**/**/*"
	],
	"typings": "./dist/index.d.ts",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Milo123459/tyvn.git"
	}
}
