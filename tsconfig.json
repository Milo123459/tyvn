{
	"compilerOptions": {
		"lib": ["ESNext"],
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "ESNext",
		"outDir": "dist",
		"sourceMap": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"resolveJsonModule": true,
		"declaration": true
	},
	"include": ["src"],
    "exclude": ["./src/**/*.spec.ts"],
    "typedocOptions": {
        "exclude": "./src/**/*.spec.ts",
        "entryPoints": "./src/",
        "out": "docs",
        "theme": "minimal",
        "includeVersion": true
    }
}
